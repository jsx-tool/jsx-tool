{
  "name": "@jsx-tool/jsx-tool",
  "version": "0.0.24",
  "description": "Development server for JSX Tool",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jsx-tool/jsx-tool.git"
  },
  "bugs": {
    "url": "https://github.com/jsx-tool/jsx-tool/issues"
  },
  "homepage": "https://github.com/jsx-tool/jsx-tool#readme",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "jsx-tool": "./bin/jsx-tool.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./vite": {
      "types": "./dist/esm/vite-plugin.d.ts",
      "import": "./dist/esm/vite-plugin.js",
      "require": "./dist/vite-plugin.js"
    }
  },
  "scripts": {
    "build": "tsc && tsc -p tsconfig.esm.json",
    "build:watch": "tsc --watch",
    "build:esm:watch": "tsc -p tsconfig.esm.json --watch",
    "dev:all": "concurrently \"npm run build:watch\" \"npm run build:esm:watch\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "prepare": "husky",
    "sync-version": "node scripts/sync-version.js"
  },
  "keywords": [
    "jsx-tool",
    "jsxtool",
    "jsx tool",
    "react jsx tool",
    "jsx tools",
    "jsx dev tool",
    "jsx",
    "dev-tools",
    "react-jsx",
    "react-dev-tools",
    "jsx-dev-server",
    "jsx-tool-dev-server"
  ],
  "author": "Stanton Street Inc.",
  "license": "MIT",
  "dependencies": {
    "@inquirer/prompts": "^7.9.0",
    "@tailwindcss/language-service": "^0.14.29",
    "@vscode/ripgrep": "^1.17.0",
    "commander": "^14.0.0",
    "http-proxy": "^1.18.1",
    "picocolors": "^1.1.1",
    "prettier": "^3.6.2",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.10.0",
    "typescript-language-server": "^5.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "@types/commander": "^2.12.0",
    "@types/eslint": "^9.6.1",
    "@types/http-proxy": "^1.17.16",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.17.57",
    "@types/prettier": "^2.7.3",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.6.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "~5.3.3"
  },
  "files": [
    "dist",
    "bin",
    "src"
  ]
}
